@using Lanches.Domain.Entities;
@model Item

<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="...">
            </div>
            <div class="clard-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.DescricaoCurta</h5></p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="" asp-action="" class="btn btn-outline-info">
                        Ver todos os itens
                    </a>

                    <a class=" btn btn-primary" id="cardButton" asp-controller="CarrinhoCompra"
                       asp-action="@nameof(CarrinhoCompraController.AdicionarItemNoCarrinhoCompra)" asp-route-itemId="@Model.Id">
                        Adicionar @Model.Nome ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<Lanches.Domain.Entities.Lanche>

<div>
    <h2>@ViewData["Titulo"]</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var lanche in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img class="img-fluid" src="@lanche.ImagemUrl" /></p>
                <h3>Preço: @lanche.Preco.ToString("c")</h3>
                <h4>@lanche.Nome</h4>
                <p>@lanche.DescricaoCurta</p>
            </div>
        }
    </div>
</div>